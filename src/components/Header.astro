---
import HeroAscii from "./HeroAscii.astro";
import SocialLinks from "./SocialLinks.astro";
---

<div class="horizontal-outer">
    <div class="description">
        <h2>I am a software engineer studying computer science at the Technical University of Munich.
        <br/><br/>I like watching movies, reading comics and playing card games.</h2>
        <SocialLinks/>
    </div>
</div>
<style>
    .horizontal-outer{
        display: flex;
        gap: 20px;
        align-items: flex-start;
    }
    .description{
        display: flex;
        flex-direction: column;
        color: var(--forest-green);
        gap: 20px;
    }
    .description h1 {
        margin: 0; /* Remove default margins */
}
    /* Responsive layout change */
    @media (max-width: 768px) { /* Adjust the width as needed */
        .horizontal-outer {
            flex-direction: column; /* Switches to a vertical layout on smaller screens */
            align-items: center; /* Optional: Center content if desired in column layout */
        }
    }
</style>
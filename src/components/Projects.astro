        font-weight: bold;
    }
    h4 {
        color: var(--dartmouth-green);
    }
    h3 {
        color: var(--dark-spring-green);
    }
    .
    .project-link:hover h2{
        text-decoration: underline;
        text-underline-offset: 2px;
    }
    :global(.link-icon){
        visibility: hidden;
    }
    .project-link:hover :global(.link-icon) {
        visibility: visible;
    }
    .dev-banner{

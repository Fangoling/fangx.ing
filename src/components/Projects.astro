<style>
    .project-link h2,
    .project-link h3,
    .project-link h4,
    .project h2,
    .project h3 {
        margin: 8px; /* Reset default margins */
    }
    .projects-column{
        display: flex;
        flex-direction: column;
        align-items: start;
        gap: 10px;
    }
    .project, .project-link{
        border-left: solid var(--pakistan-green) 2px;
        padding-left: 8px;
    }
    .project:hover, .project-link:hover{
        border-left: solid var(--forest-green) 2px;
    }
    .project-link a {
        color: var(--pigment-green);
        text-decoration: none;
        font-weight: bold;
    }
    h4 {
        color: var(--dartmouth-green);
    }
    h3 {
        color: var(--dark-spring-green);
    }
    .
    .project-link:hover h2{
        text-decoration: underline;
        text-underline-offset: 2px;
    }
    :global(.link-icon){
        visibility: hidden;
    }
    .project-link:hover :global(.link-icon) {
        visibility: visible;
    }
    .dev-banner{
        color: black;
        background-color: orange;
        padding: 1px 10px;
        font-size: 12px;
        font-weight: bold;
    }
    .online-banner{
        color: black;
        background-color: green;
        padding: 1px 10px;
        font-size: 12px;
        font-weight: bold;
    }
    .project-title{
        display: flex;
        align-items: center;
    }
</style>
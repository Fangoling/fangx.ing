        padding-left: 16px;
    }
    .project:hover, .project-link:hover{
        border-left: solid var(--font) 2px;
    }
    .project-link a {
        color: var(--font);
        text-decoration: none;
    }
    h4 {
        color: var(--font);
    }
    h3 {
        color: var(--font);
    }
    .
    .project-link:hover h2{
        text-decoration: underline;
        text-underline-offset: 2px;
    }
    :global(.link-icon){

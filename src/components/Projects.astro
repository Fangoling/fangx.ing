<style>
    h1 {
        font-size: 32px;
    }
    p {
        font-size: 18px;
    }
    h2 {
        font-size: 20px;
    }
    .project-link h2,
    .project-link h3,
    .project-link h4,
    .project h2,
    .project h3 {
        margin: 0px; /* Reset default margins */
    }
    .projects-column{
        display: grid;
        gap: 30px;
        width: 100%;
        grid-template-columns: 1fr 1fr;

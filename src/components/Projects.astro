<style>
    .project-link h2,
    .project-link h3,
    .project-link h4,
    .project h2,
    .project h3 {
        margin: 8px; /* Reset default margins */
    }
    .projects-column{
        display: grid;
        gap: 30px;
        width: 100%;
        grid-template-columns: 1fr 1fr;
    }
    @media (max-width: 768px) { /* Adjust the width as needed */
        .projects-column {
            grid-template-columns: 1fr;
        }
    }
    .project, .project-link{
        border-left: solid var(--pakistan-green) 2px;
        padding-left: 8px;
    }
    .project:hover, .project-link:hover{

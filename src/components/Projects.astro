<style>
    .project-link h2,
    .project-link h3,
    .project-link h4,
    .project h2,
    .project h3 {
        margin: 8px; /* Reset default margins */
    }
    .projects-column{
        display: grid;
        gap: 30px;
        width: 100%;
        grid-template-columns: 1fr 1fr;
    }
    @media (max-width: 768px) { /* Adjust the width as needed */
        .projects-column {
            grid-template-columns: 1fr;
        }
    }
    .project, .project-link{
        border-left: solid var(--font) 2px;
        padding-left: 8px;
    }
    .project:hover, .project-link:hover{
        border-left: solid var(--font) 2px;
    }
    .project-link a {
        color: var(--font);
        text-decoration: none;
        font-weight: bold;
    }
    h4 {
        color: var(--font);
    }
    h3 {
        color: var(--font);
    }
    .
    .project-link:hover h2{
        text-decoration: underline;
        text-underline-offset: 2px;
    }
    :global(.link-icon){
        visibility: hidden;
    }
    .project-link:hover :global(.link-icon) {
        visibility: visible;
    }
    .dev-banner{
        color: black;
        background-color: orange;
        padding: 1px 10px;
        font-size: 12px;
        font-weight: bold;
    }
    .online-banner{
        color: black;
        background-color: lightgreen;
        padding: 1px 10px;
        font-size: 12px;
        font-weight: bold;
        margin-right: 8px;
    }
    .project-title{
        display: flex;
        align-items: center;
    }
</style>
